{
  "name": "limejs",
  "version": "0.4.3",
  "description": "lime framework",
  "main": "index.js",
  "scripts": {
    "start": "nodemon ./example/app.js",
    "debug": "DEBUG=lime:* nodemon --inspect-brk=9229 ./example/app.js",
    "lint": "eslint --ext js --fix test lib benchmark example",
    "test": "mocha --require @babel/register test/**/*.spec.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/limejs/lime.git"
  },
  "keywords": [
    "lime"
  ],
  "files": [
    "index.js",
    "lib",
    "mvc",
    "doc",
    "example"
  ],
  "dependencies": {
    "debug": "^4.1.0",
    "koa": "^2.6.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0"
  },
  "author": "sheldoncui <websheldoncui@gmail.com> (https://www.cuiyongjian.com)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "mocha": "^6.2.0"
  }
}
